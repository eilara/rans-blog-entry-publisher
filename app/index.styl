// vim: set tw=80 fo=cqt wm=0 tabstop=2 softtabstop=2 shiftwidth=2:

$font-size                 = 10pt
$font-size-30p             = 0.3 * $font-size
$font-size-half            = 0.5 * $font-size
$font-size-cite            = 0.7 * $font-size
$font-size-h1              = 1.8 * $font-size
$font-size-3x              = 3.0 * $font-size
$font-prefix               = 'fonts/lm'
$line-height               = 122%
$link-color                = #0000E0
$size-margin               = $font-size-30p
$size-para-h-margin        = $size-margin
$size-para-indent          = 1.3 * $font-size
$size-root-width-max       = 42 * $font-size
$size-root-width-min       = $size-root-width-max / 2
$size-head-width-max       = $size-root-width-max - $size-para-indent * 5
$size-head-width-min       = $size-root-width-min

font-set($family, $size=$font-size)
  font                       $size $family
  text-rendering             optimizeLegibility

font-face($name, $url)
  font-family                $name
  src                        url($font-prefix + $url + '.otf') format('opentype')
  font-feature-settings      "kern" 1
  text-rendering             optimizeLegibility

center-h()
  margin-left                auto
  margin-right               auto

center-h-text($family, $size=$font-size)
  center-h
  font-set                   $family $size
  font-weight                normal
  text-align                 center

basic-para-child($family=Lmr)
    font-set                 $family
    text-decoration          none
    line-height              100%

basic-para()
  font-set                   Lmr
  line-height                $line-height
  text-align                 justify
  i
    basic-para-child         LmrS
  i.mm-cite
    basic-para-child         LmrCI
  em
    basic-para-child         LmrI
  s
    basic-para-child         LmrC
  code
    basic-para-child         LmrP


@font-face
  font-face                  Lmr   'roman10-regular'
@font-face
  font-face                  LmrB  'roman10-bold'
@font-face
  font-face                  LmrC  'romancaps10-regular'
@font-face
  font-face                  LmrCI 'romancaps10-oblique'
@font-face
  font-face                  LmrI  'roman10-italic'
@font-face
  font-face                  LmrS  'romanslant10-regular'
@font-face
  font-face                  LmrP  'monoprop10-regular'



a
  text-decoration            none

article
  center-h()
  max-width                  $size-root-width-max
  min-width                  $size-root-width-min
  padding                    $font-size-3x

body
  height                     100%
  margin                     0em
  padding                    0em
  width                      100%

cite
  color                      $link-color
  font-set                   Lmr12 $font-size-cite
  line-height                100%
  position                   relative
  top                        -0.4 * $font-size
  &:hover
    text-decoration          underline

figcaption, figure
  basic-para()
  text-align                 center


h1
  center-h-text              LmrB $font-size-h1
  margin-top                 $font-size-h1
  margin-bottom              $font-size

h6
  center-h-text              LmrC
  margin                     0em

li
  basic-para()
  center-h()
  max-width                  $size-head-width-max
  min-width                  $size-head-width-min
  margin-top                 $size-para-h-margin
  margin-bottom              $size-para-h-margin

p
  basic-para()
  margin-top                 $size-para-h-margin
  margin-bottom              $size-para-h-margin
  margin-left                0em
  margin-right               0em
  padding                    0em
  text-indent                $size-para-indent
  &:first-child
    text-indent              0em

.mm-head
  center-h()
  margin-top                 $font-size-3x
  max-width                  $size-head-width-max
  min-width                  $size-head-width-min
  padding                    0em

.mm-body
  margin-top                 $font-size-3x
  padding                    0em

